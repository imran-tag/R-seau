<BorderPane prefHeight="201.0" prefWidth="304.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.uha.hassenforder.flight.client.view.ConnectController">
   <bottom>
      <Label fx:id="statusLabel" text="Label" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="5.0" />
         </padding>
      </Label>
   </bottom>
   <center>
      <VBox prefHeight="100.0" prefWidth="222.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Mail" />
            <TextField fx:id="mailField" prefHeight="25.0" prefWidth="185.0" />
            <AnchorPane prefHeight="3.0" prefWidth="200.0" />
            <Label text="Passwd" />
            <PasswordField fx:id="passwdField" prefHeight="25.0" prefWidth="185.0" />
            <Button mnemonicParsing="false" onAction="#onConnect" prefHeight="31.0" prefWidth="284.0" text="Connect" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
